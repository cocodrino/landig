<section class="wrapper style1 container special">
    <div class="row">
        <ul class="uk-grid">


        {% for item in page.header.features %}
            <li class="
            uk-width-medium-1-3
            uk-width-large-1-3
            uk-width-small-1-2">
                <section>
                    {% if item.icon %}
                        <span class="feature_icon icon featured fa-{{ item.icon }}"></span>
                    {% endif %}
                    <header>
                        <h3>{{ item.title }}</h3>
                    </header>
                    <p>{{ item.text }}</p>
                    {% if item.buttons %}
                        <footer>
                            <ul class="buttons">
                                {% for button in item.buttons %}
                                    <li><a href="{{ button.url }}" class="button small">{{ button.text }}</a></li>
                                {% endfor %}
                            </ul>
                        </footer>
                    {% endif %}
                </section>

            </li>
        {% endfor %}
        </ul>
    </div>
</section>